@page "/PrescriptionItemItem/edit/{id:int}"
@inject HttpClient _client
@inject NavigationManager _navManager

<h3>Edit PrescriptionItem Item</h3>
<PrescriptionItemFormComponent ButtonText="Update" OnValidSubmit="EditPrescriptionItem" prescriptionitem="prescriptionitem" />
@code {

    [Parameter] public int id { get; set; }
    PrescriptionItem? prescriptionitem = new PrescriptionItem();
    protected async override Task OnParametersSetAsync()
    {
        prescriptionitem = await
        _client.GetFromJsonAsync<PrescriptionItem>($"{Endpoints.PrescriptionItemsEndpoint}/{id}");
    }

    async Task EditPrescriptionItem()
    {
        await _client.PutAsJsonAsync($"{Endpoints.PrescriptionItemsEndpoint}/{id}",
        prescriptionitem);
        _navManager.NavigateTo("/PrescriptionItem/");
    }

}