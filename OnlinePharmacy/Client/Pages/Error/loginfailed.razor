@page "/authentication/login-failed"
<PageTitle>Login Failed</PageTitle>
@inject NavigationManager Navigation

<div class="container">
    <div class="d-flex flex-column" id="dflexloginfailed">
        <h1 class="mt-5" id="loginfailederror">Error Unauthorized</h1>

        <h3 id="explainloginfailed">If error persists, please reload the page or re-enter to the page.</h3>
    </div>
    <div class="d-flex mt-5 dflexbacktostore">
        <button class="btn btn-outline-primary btn-lg" type="button" align="center" @onclick="homepage">BACK TO STORE</button>
    </div>
</div>



@code {
    void homepage()
    {
        Navigation.NavigateTo("/");
    }
}