@page "/unauthorized"
<PageTitle>ERROR 404</PageTitle>
@inject NavigationManager Navigation

<div class="container">
    <div class="d-flex flex-column" id="dflexerrorunauthorized">
        <h1 class="mt-5" id="unauthorizederror">Error Unauthorzied</h1>

        <h3 id="explainunauthorized">You are not authorized to access this resource.</h3>

    </div>
    <div class="d-flex mt-5 dflexbacktostore">
        <button class="btn btn-outline-primary btn-lg" type="button" align="center" @onclick="homepage">BACK TO STORE</button>
    </div>
</div>


@code {
    void homepage()
    {
        Navigation.NavigateTo("/");
    }
}